generator photon {
  provider = "photonjs"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

model User {
  id       String  @default(cuid()) @id
  email    String  @unique
  password String
  name     String
  maxAmountPerTranscationDollar String
  description String?
  currencyAccounts  CurrencyAccount[]
}

model Currency {
  id       String  @default(cuid()) @id
  name    String  @unique
  exchangeRateDollar String
}

model CurrencyAccount {
  id          String @id @default(cuid())
  walletId    String
  balance     String
  currency    Currency
  user        User
}